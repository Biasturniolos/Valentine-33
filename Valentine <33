            <div class = "buttons">
                <button class="btn" id = "simButton" onclick="nextPage()">sim</button>
                <button class="btn" id="nãoButton" onmouseover="moveButton()">não</button>
                <script>
                    function nextPage() {
                        window.location.href = "sim.html";
                    }
                    
                    function moveButton() {
                        var x = Math.random() * (window.innerWidth - document.getElementById('nãoButton').offsetWidth);
                        var y = Math.random() * (window.innerHeight - document.getElementById('nãoButton').offsetHeight);
                        document.getElementById('nãoButton').style.left = `${x}px`;
                        document.getElementById('nãoButton').style.top = `${y}px`;
                    }
                </script> 
            </div>
        </div>
       
